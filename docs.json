{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "thirdweb docs",
  "colors": {
    "primary": "#F213A4",
    "light": "#F213A4",
    "dark": "#F213A4"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Wallets",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          }
        ]
      },
      {
        "tab": "Tokens",
        "groups": [
          {
            "group": "Resources",
            "pages": [
              "/tokens/resources/security",
              "/tokens/resources/faq"
            ]
          }
        ]
      },
      {
        "tab": "Bridge",
        "groups": [
          {
            "group": "Resources",
            "pages": [
              "/bridge/resources/fee-breakdown",
              "/bridge/resources/onramp-provider",
              "/bridge/resources/faq"
            ]
          }
        ]
      },
      {
        "tab": "x402",
        "groups": [
          {
            "group": "Resources",
            "pages": [
              "/bridge/resources/faq"
            ]
          }
        ]
      },
      {
        "tab": "AI",
        "groups": [
          {
            "group": "Blockchain LLM",
            "pages": [
              "/ai/blockchain-llm/get-started",
              "/ai/blockchain-llm/transaction-execution",
              "/ai/blockchain-llm/streamed-response"
            ]
          },
          {
            "group": "MCP-Server",
            "pages": [
              "/ai/mcp-server/get-started"
            ]
          },
          {
            "group": "Resources",
            "pages": [
              "/ai/resources/faq"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "https://api.thirdweb.com/openapi.json"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Playground",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Changelog",
        "href": "https://blog.thirdweb.com/changelog"
      },
      {
        "label": "Support",
        "href": "https://thirdweb.com/support"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://thirdweb.com/login"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/thirdweb",
      "github": "https://github.com/thirdweb-dev",
      "linkedin": "https://linkedin.com/company/thirdweb_"
    }
  },
  "seo": {
    "indexing": "all"
  }
}